@{
    ViewData["Title"] = "Cart";



    List<Product> list = (List<Product>)ViewBag.cartlist;


    List<Cover> covers = (List<Cover>)ViewBag.Covers;
    List<Author> authors = (List<Author>)ViewBag.Authors;


    float Total = 0.0f;

    foreach (var item in list)
    {
        Total += item.price;
    }

    //foreach (var item in UserOptions.cart)
    //{
    //    list.Add(Option)

    //}
}


        <div class="box">
        <div style="display:flex;"><h5>Всего: @Total ₴</h5></div>


            @foreach(var prod in list){

            <div class="card-box">
                <img alt="" src="@covers.Find(c=>prod.cover_id==c.id).content" class="cover-box"/>


                <div class="info-box">
                    <div class="name-box">@prod.name</div>
                    <div class="author-box">@authors.Find(i=>i.id==prod.author_id).name</div>
                </div>
                <div class="price-box">@prod.price ₴</div>

                <form method="post">
                    <input type="text" name="book_id" value="@prod.id" style="display:none;"></input>
                    <button type="submit" style="border:none;"><img src="https://cdn1.iconfinder.com/data/icons/basic-ui-elements-coloricon/21/19-512.png" style="width:30px; height:30px;" /></button>
                </form>

            </div>

            }


        </div>
