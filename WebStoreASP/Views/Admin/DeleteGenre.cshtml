@{
    ViewData["Title"] = "Delete Genre";
    var auth =  (List<Genre>)@ViewBag.Genres;
}



@foreach (var item in auth)
{
    <form method="post">
                    <label> @item.name </label>
                    <input type="text" name="id" value="@item.id" style="display:none;"></input>
                    <button type="submit">X</button>
    </form>
    <br/>
}

